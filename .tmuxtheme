# This tmux statusbar config was created by tmuxline.vim
# on 金, 08  6月 2018

set -g status-justify "left"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "colour236"
set -g status-left-length "100"
set -g pane-active-border-fg "colour148"
set -g status-bg "colour233"
set -g message-command-fg "colour247"
set -g pane-border-fg "colour236"
set -g message-bg "colour236"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "colour247"
setw -g window-status-fg "colour231"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour233"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour148"
setw -g window-status-separator ""
setw -g window-status-bg "colour233"
set -g status-left "#[fg=colour233,bg=colour231,bold] #S #[fg=colour231,bg=colour233,nobold,nounderscore,noitalics] "
set -g status-right "#[fg=colour236,bg=colour233,nobold,nounderscore,noitalics]#[fg=colour247,bg=colour236] %Y-%m-%d  #[fg=colour253,bold]%H:%M #[fg=colour253,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour233,bg=colour253,bold] #h "
setw -g window-status-format         "#[fg=colour233,bg=colour233,nobold,nounderscore,noitalics] #[fg=colour240,bg=colour233]#I#F  #[fg=colour247,bg=colour233] #W "
setw -g window-status-current-format "#[fg=colour233,bg=colour31,nobold,nounderscore,noitalics] #[fg=colour117,bg=colour31]#I#F  #[fg=colour231,bg=colour31,bold] #W #[fg=colour31,bg=colour233,nobold,nounderscore,noitalics] "
